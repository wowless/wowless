{
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "customizations": {
      "codespaces": {
        "repositories": {
          "lua-wow-tools/*": {
            "permissions": "write-all"
          }
        }
      },
      "vscode": {
        "extensions": [
          "EditorConfig.EditorConfig"
        ]
      }
    },
    "features": {
        "github-cli": {}
    },
    "name": "lua-wow-tools/wowless",
    "postCreateCommand": "git submodule update --init --recursive --depth 1 && pre-commit install && pre-commit run -a -v --show-diff-on-failure",
    "remoteUser": "vscode"
}
